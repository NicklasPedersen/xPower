<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xPowerPhoneApp.Pages.SetDeviceNamePage"
             xmlns:ViewModels="clr-namespace:xPowerPhoneApp.ViewModels"
             x:DataType="ViewModels:EditDeviceViewModel">
    <ContentPage.Content>
        <StackLayout
                BackgroundColor="{DynamicResource LightPrimaryColor}"
                Padding="20,10,20,10"
                Margin="2">
            <Label
                FontAttributes="Bold"
                FontSize="Large"
                Text="ID" />
            <Label Text="{Binding Mac}"
                   />
            <Label
                FontAttributes="Bold"
                FontSize="Large"
                Text="Old Name" />
            <Label Text="{Binding Name}"
                   />
            <Label Text="New Name" 
                FontSize="Large"
                FontAttributes="Bold"
                />
            <Entry
                AutomationId="automationNameEntry"
                Text="{Binding NewName}"
                Placeholder="New Device Name"
                />
            <Button
                AutomationId="automationEditNameButton"
                Command="{Binding EditNameCommand}"
                Text="Change name"
                />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>